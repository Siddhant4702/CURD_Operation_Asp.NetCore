@model List<CURD_using_SDSclient.Models.User>

<h2>List Of Users</h2>
<br />
<a href="@Url.Action("Index")" class="btn btn-primary btn-sm">Add New User</a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>Serial No</th>
            <th>User Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var user = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <form method="GET" action="@Url.Action("Update", new { id = user.Id })" onsubmit="return confirm('Are you sure you want to Update this user?');">
                        <button type="submit" class="btn btn-success btn-sm">Update</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="@Url.Action("Delete", new { id = user.Id })" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>